<%- include('partials/header'); %> 
 <div class="h-100 d-flex justify-content-center align-items-center bg-dark">
        <form class="p-5 rounded-lg bg-light" action="/login" method="post">
                <input class="form-control mb-2" type="email" name="email" placeholder="Email">
                <input class="form-control mb-2" type="password" name="password" placeholder="Password">
                <button type="submit" class="btn bg-light bg-white border">Login</button> 
                <% if (locals.errors && locals.errors.login) { %>
                    <% locals.errors.login.forEach(function(error) { %>
                        <p class="alert alert-primary" role="alert"><%= error %></p>
                    <% }) %>
                <% } %>
        </form>
    </div>
<%- include('partials/footer'); %>